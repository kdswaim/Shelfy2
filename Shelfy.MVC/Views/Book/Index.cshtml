@model IEnumerable<BookListItem>

@Html.ActionLink("Create Book", "Create", "Book")
@if(Model.Count() > 0)
{
<table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Title
                </th>
                 <th>
                    Author Name
                </th>
                 <th>
                    Genre
                </th>
                <th>
                
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.Title</td>
                    <td>@book.Author.Name</td>
                    <td>@book.Genre.GenreName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@book.BookId">Details</a>
                        <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a>
                        <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else 
{
    <p class="text-danger">No books found.</p>
}