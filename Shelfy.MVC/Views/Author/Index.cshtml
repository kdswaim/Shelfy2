@model IEnumerable<AuthorListItem>

@Html.ActionLink("Create Author", "Create", "Author")
@if(Model.Count() >0)
{
<table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                 <th>
                    Biography
                </th>
                 <th>
                    Website
                </th>
                 <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.AuthorId</td>
                    <td>@author.Name</td>
                    <td>@author.Website</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@author.AuthorId">Details</a>
                        <a asp-action="Edit" asp-route-id="@author.AuthorId">Edit</a>
                        <a asp-action="Delete" asp-route-id="@author.AuthorId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p class="text-danger">No authors available.</p>
}