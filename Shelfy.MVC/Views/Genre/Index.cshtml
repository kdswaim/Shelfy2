@model List<GenreListItem>

@Html.ActionLink("Create Genre", "Create", "Genre")
@if(Model.Count() >0)
{
<table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Id</td>
                    <td>@genre.GenreName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@genre.Id">Details</a>
                        <a asp-action="Edit" asp-route-id="@genre.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@genre.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else 
{
    <p class="text-danger">No genres found.</p>
}